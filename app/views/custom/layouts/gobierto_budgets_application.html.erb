  <script type="text/javascript">
    I18n.defaultLocale = "<%= I18n.default_locale %>";
    I18n.locale = "<%= I18n.locale %>";
  </script>

  <%= render "newtral_fonts" %>
  <%= render "newtral_styles" %>

</head>

