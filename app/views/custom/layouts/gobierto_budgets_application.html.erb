<%# render 'layouts/newtral_layout_head' %>
<!DOCTYPE html>
<html>
<head>
  <% set_meta_tags twitter: { :site => Settings.twitter_account} %>
  <%= display_meta_tags site: t('.site_title'), reverse: true %>

  <%= stylesheet_link_tag    'gobierto_budgets/application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'gobierto_budgets/application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <%= yield :header %>
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <link rel="shortcut icon" href="http://newtral.es/wp-content/uploads/2018/02/favi-n.png" type="image/x-icon" />
  <link rel="apple-touch-icon" sizes="180x180" href="http://newtral.es/wp-content/uploads/2018/02/favi-n.png">

