<body <%= data_attributes %>>

<div class="gobierto_container">

  <header class="global">

    <div class="logo">
      <%= link_to_unless_current image_tag('https://newtral.es/wp-content/uploads/2018/02/new.png'), root_path %>
      <span class="sub-title">Transparentia Municipal</span>
    </div>

    <div class="resp ham">
      <%= link_to '<i class="fa fa-bars"></i>'.html_safe, '' %>
    </div>

    <div class="desktop">

      <input type="text" class="places_search search_auto" value="" placeholder="<%= t('.search_municipality') %>" >

      <menu>
        <ul>
          <li><%= link_to t('.municipalities'), root_path, class: class_if('selected', current_page?(root_path))  %></li>
          <li><%= link_to t('.compare'), gobierto_budgets_compare_path , class: class_if('selected', current_page?(gobierto_budgets_compare_path) || action_name == 'compare')%></li>
          <li><%= link_to t('.rankings'), gobierto_budgets_ranking_path , class: class_if('selected', current_page?(gobierto_budgets_ranking_path) || action_name == 'ranking')%></li>
          <li><%= link_to t('.maps'), gobierto_budgets_map_path(year: GobiertoBudgets::SearchEngineConfiguration::Year.last), class: class_if('selected', current_page?(gobierto_budgets_map_path(Date.today.year))), data: {no_turbolink: true} %></li>
        </ul>
      </menu>

      <% if logged_in? %>
      <div class="links_list personal_links">
        <p><%= t('.hi') %> <strong><%= current_user.full_name %></strong></p>
        <% if current_user.place_id %>
          <p><%= t('.your_municipality') %>: <%= link_to INE::Places::Place.find(current_user.place_id).name, gobierto_budgets_place_path(INE::Places::Place.find(current_user.place_id), year: GobiertoBudgets::SearchEngineConfiguration::Year.last) %></p>
        <% end %>
        <p><%= link_to t('.edit_your_personal_data'), edit_user_path %></p>
        <p><%= link_to t('.close_session'), logout_path, method: :delete, class: 'logout' %></p>
      </div>
      <% end %>

      <div class="links_list">
        <h3><%= t('.recent_municipalities') %></h3>
        <ul id="history">
        </ul>
      </div>

      <div class="links_list">
        <h3><%= t('.recent_comparisons') %></h3>
        <ul id="comparisons-history">
        </ul>
      </div>

    </div>

  </header>

  <div class="main_content clearfix">
    <%= yield %>
  </div>

</div>

<footer>
  <div class="gobierto_ref center" >
    <p style="font-size: .75em; margin: 0 0 3em 0">Un producto de Gobierto <%= link_to image_tag('GobiertoFooter@2x.png', size: '401x18'), 'https://gobierto.es', target: '_blank', style: "vertical-align: middle; margin: 0 0 0 2em;" %></p>
    <p style="font-size: .75em;"><%= link_to t('.methodology_and_sources'), gobierto_budgets_about_path(anchor: 'method') %></p>
  </div>
</footer>


<script type="text/javascript">

    'use strict';
    <%= yield :javascript %>

</script>

<%= render 'layouts/analytics_footer' %>

<%# render 'layouts/newtral_layout_footer' %>

</body>
</html>
